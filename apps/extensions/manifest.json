{
  "manifest_version": 3,
  "name": "EasyWeather",
  "version": "0.3.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "EasyWeather"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["geolocation"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
